name: "dotnet-exec"
author: "Weihan Li"
description: "dotnet-exec to execute C# scripts"
inputs:
  script:
    description: 'Script to execute'
    required: true
  arguments:
    description: 'Script arguments'
    required: false
    default: ""
runs:
  using: 'docker'
  image: 'weihanli/dotnet-exec-actions'
  args:
    - ${{ inputs.script }}
    - ${{ inputs.arguments }}
